@{
    ViewData["Title"] = "Home Page";
}

<!-- Button trigger modal -->
<button href="Home/Index" type="button" class="btn btn-primary mb-3" data-toggle="modal" data-target="#exampleModal">
   Söför Ekle
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Söför Ekle</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Ekle" method="post">
                <input type="hidden" name="SöförID"/>
                <input type="text" placeholder="Tam Adınız" class="form-control mb-2" name="Söförad"/>
                <button href="Home/Index" class="btn btn-success" type="submit">Söför Ekle</button>
                </form>
               
            </div>
            
        </div>
    </div>
</div>

<table class="table table-striped table-hover">

    @foreach (var item in ViewBag.SöförListe as List<Söförler>)
    {
        <tr>
            <td>
                @item.Söförad
            </td>
            <td><a class="btn btn-info" asp-action="Söför_Guncelle" asp-route-id="@item.SöförID"></a>Söför Güncelle</td>
            <td><a class="btn btn-danger" asp-action="Söför_Sil" asp-route-id="@item.SöförID"></a>Sil</td>

        </tr>
    }



</table>
